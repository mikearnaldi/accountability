{
  "name": "accountability",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.17.1",
  "scripts": {
    "build": "pnpm --recursive --parallel run build",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc -b tsconfig.json",
    "lint": "eslint packages --ext .ts,.tsx",
    "lint:fix": "eslint packages --ext .ts,.tsx --fix",
    "format": "prettier --write \"packages/**/*.{ts,tsx,json}\"",
    "format:check": "prettier --check \"packages/**/*.{ts,tsx,json}\"",
    "clean": "pnpm --recursive --parallel run clean"
  },
  "devDependencies": {
    "@effect/vitest": "^0.27.0",
    "@eslint/js": "^9.39.2",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vitest/coverage-v8": "^3.2.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.7.4",
    "typescript": "^5.8.3",
    "vitest": "^3.2.0"
  }
}
