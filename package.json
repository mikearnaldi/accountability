{
  "name": "accountability",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.17.1",
  "pnpm": {
    "overrides": {
      "vite": "npm:rolldown-vite@7.3.1"
    },
    "peerDependencyRules": {
      "allowedVersions": {
        "@effect-atom/atom>@effect/experimental": "^0.58.0",
        "@effect-atom/atom>@effect/platform": "^0.94.0",
        "@effect-atom/atom>@effect/rpc": "^0.73.0"
      }
    }
  },
  "scripts": {
    "effect:patch": "effect-language-service patch",
    "dev": "pnpm --filter @accountability/web run dev",
    "build": "pnpm --filter @accountability/web run build",
    "preview": "pnpm --filter @accountability/web run preview",
    "start": "pnpm --filter @accountability/web run start",
    "test": "vitest run",
    "test:verbose": "VERBOSE=1 vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "pnpm --filter @accountability/web run test:e2e",
    "test:e2e:verbose": "pnpm --filter @accountability/web run test:e2e:verbose",
    "test:e2e:headed": "pnpm --filter @accountability/web run test:e2e:headed",
    "test:e2e:ui": "pnpm --filter @accountability/web run test:e2e:ui",
    "test:e2e:report": "pnpm --filter @accountability/web run test:e2e:report",
    "generate-routes": "pnpm --filter @accountability/web run generate-routes",
    "typecheck": "tsc -b tsconfig.json",
    "lint": "eslint packages --ext .ts,.tsx",
    "lint:fix": "eslint packages --ext .ts,.tsx --fix",
    "format": "prettier --write \"packages/**/*.{ts,tsx,json}\"",
    "format:check": "prettier --check \"packages/**/*.{ts,tsx,json}\"",
    "clean": "pnpm --recursive --parallel run clean"
  },
  "devDependencies": {
    "@effect/language-service": "^0.64.1",
    "@effect/vitest": "^0.27.0",
    "@eslint/js": "^9.39.2",
    "@testcontainers/postgresql": "^10.23.0",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vitest/coverage-v8": "^3.2.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.7.4",
    "typescript": "^5.8.3",
    "vitest": "^3.2.0"
  }
}
