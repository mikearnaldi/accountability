{
  "extends": "../../tsconfig.base.json",
  "include": ["test", "../../vitest.d.ts"],
  "references": [
    { "path": "tsconfig.src.json" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": true,
    "rootDir": "test",
    "tsBuildInfoFile": ".tsbuildinfo/test.tsbuildinfo",
    "rewriteRelativeImportExtensions": false,
    "allowImportingTsExtensions": true,
    "paths": {
      "@accountability/core/*": ["../core/src/*"],
      "@accountability/persistence/*": ["../persistence/src/*"],
      "@accountability/api/*": ["./src/*"]
    }
  }
}
